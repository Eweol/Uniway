<Page x:ConnectionId='1'
    x:Class="Uniway.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Uniway"
    xmlns:device="using:ZWay_API"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate                                         x:Key="SwitchBinaryDevicesTemplate">
            <Grid x:ConnectionId='16' HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Center">
                <Border Grid.Column="1" Height="100" Width="100" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center">
                    <Grid>
                        <ProgressRing IsActive="True"/>
                        <Image x:ConnectionId='20' Source="{Binding icon }" Visibility="Collapsed"                    />
                    </Grid>
                </Border>
                <Border Grid.Column="2" Grid.Row ="1" Height="50" HorizontalAlignment="Stretch" Margin="150,0,100,0" VerticalAlignment="Top">
                    <TextBlock x:ConnectionId='19'                               HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="32" Foreground="White"/>
                </Border>
                <Border Grid.Column="2" Grid.Row ="2" Height="50" HorizontalAlignment="Stretch" Margin="150,0,100,0" VerticalAlignment="Bottom">
                    <TextBlock x:ConnectionId='18'                          HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
                </Border>
                <Border Grid.Column="3" Height="100" Width="100" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center">
                    <ToggleSwitch x:ConnectionId='17'                                                                          OffContent="Off" OnContent="On" Margin="0,0,-60,0"                                 HorizontalAlignment="Right" VerticalAlignment="Center">

                    </ToggleSwitch>
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate                                         x:Key="SensorBinaryDevicesTemplate">
            <Grid x:ConnectionId='11' HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Center">
                <Border Grid.Column="1" Height="100" Width="100" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center">
                    <Grid>
                        <ProgressRing IsActive="True"/>
                        <Image x:ConnectionId='15' Source="{Binding icon}" Visibility="Collapsed"                    />
                    </Grid>
                </Border>
                <Border Grid.Column="2" Grid.Row ="1" Height="50" HorizontalAlignment="Stretch" Margin="150,0,100,0" VerticalAlignment="Top">
                    <TextBlock x:ConnectionId='14'                               HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="32" Foreground="White"/>
                </Border>
                <Border Grid.Column="2" Grid.Row ="2" Height="50" HorizontalAlignment="Stretch" Margin="150,0,100,0" VerticalAlignment="Bottom">
                    <TextBlock x:ConnectionId='13'                          HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
                </Border>
                <Border Grid.Column="3" Height="100" Width="100" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:ConnectionId='12'                               HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate                                             x:Key="SensorMultilevelDevicesTemplate">
            <Grid x:ConnectionId='6' HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Center">
                <Border Grid.Column="1" Height="100" Width="100" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center">
                    <Grid>
                        <ProgressRing IsActive="True"/>
                        <Image x:ConnectionId='10' Source="{Binding icon}" Visibility="Collapsed"                    />
                    </Grid>
                </Border>
                <Border Grid.Column="2" Grid.Row ="1" Height="50" HorizontalAlignment="Stretch" Margin="150,0,100,0" VerticalAlignment="Top">
                    <TextBlock x:ConnectionId='9'                               HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="32" Foreground="White"/>
                </Border>
                <Border Grid.Column="2" Grid.Row ="2" Height="50" HorizontalAlignment="Stretch" Margin="150,0,100,0" VerticalAlignment="Bottom">
                    <TextBlock x:ConnectionId='8'                          HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
                </Border>
                <Border Grid.Column="3" Height="100" Width="100" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:ConnectionId='7'                               HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate                             x:Key="DevicesTemplate">
            <Grid x:ConnectionId='2' HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Center">
                <Border Grid.Column="1" Height="100" Width="100" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center">
                    <Grid>
                        <ProgressRing IsActive="True"/>
                        <Image x:ConnectionId='5' Source="{Binding icon}" Visibility="Collapsed"                    />
                    </Grid>
                </Border>
                <Border Grid.Column="2" Grid.Row ="1" Height="50" HorizontalAlignment="Stretch" Margin="150,0,100,0" VerticalAlignment="Top">
                    <TextBlock x:ConnectionId='4'                               HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="32" Foreground="White"/>
                </Border>
                <Border Grid.Column="2" Grid.Row ="2" Height="50" HorizontalAlignment="Stretch" Margin="150,0,100,0" VerticalAlignment="Bottom">
                    <TextBlock x:ConnectionId='3'                          HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
                </Border>
                <Border Grid.Column="3" Height="100" Width="100" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center">
                </Border>
            </Grid>
        </DataTemplate>
        <local:DeviceTemplates x:Key="DeviceTemplates" SwitchBinaryDevicesTemplate="{StaticResource SwitchBinaryDevicesTemplate}" SensorBinaryDevicesTemplate="{StaticResource SensorBinaryDevicesTemplate}" SensorMultilevelDevicesTemplate="{StaticResource SensorMultilevelDevicesTemplate}" DevicesTemplate="{StaticResource DevicesTemplate}"></local:DeviceTemplates>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:ConnectionId='21' x:Name="deviceList"                                              Margin="20,20,20,20" ItemTemplateSelector="{StaticResource DeviceTemplates}" FocusVisualMargin="10,10,10,10">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="DarkGreen"/>
                    <Setter Property="Margin" Value="10,10,10,10"/>
                    <!--<Setter Property="IsHitTestVisible" Value="False"/>-->
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Page>

